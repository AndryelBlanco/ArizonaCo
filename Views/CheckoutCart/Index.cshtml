@model CheckoutCartViewModel

<div class="container">
    <div class="row">
    </div>
    <div>
        <h4>Seu carrinho de compras: </h4>
    </div>
    <table class="d-lg-table table-bordered table-striped">
        <thead>
            <tr>
                <th>Lanche</th>
                <th>Quantidade</th>
                <th class="text-right">Preço</th>
                <th class="text-right">Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.CheckoutCart.CheckoutCartItens)
            {
                <tr>
                    <td class="text-center">@item.Burger.BurgerName</td>
                    <td class="text-center">@item.Ammount</td>
                    <td class="text-right">@item.Burger.Price.ToString()</td>
                    <td class="text-right">@((item.Ammount * item.Burger.Price).ToString("c"))</td>
                    <td class="text-center">
                        <a asp-controller="CheckoutCart" asp-action="RemoveItemFromCheckoutCart" asp-route-burgerId="@item.Burger.BurgerId">
                            <img src="~/images/delete.png" />
                        </a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">
                    @Model.CheckoutCartTotal.ToString("c");
                </td>
            </tr>
        </tfoot>
    </table>
    <div class="text-right">
        <div class="btn-group">
            <a class="btn btn-success" asp-controller="Order" asp-action="Checkout">Concluir Pedido</a>
            <a class="btn btn-secondary" asp-controller="Burger" asp-action="List">Continuar Comprando</a>
        </div>
    </div>
</div>
